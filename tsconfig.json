{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "types": ["reflect-metadata", "mocha", "babel__core", "express"],
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*.ts"],
}
